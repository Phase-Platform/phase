{
  "name": "phase-platform",
  "version": "1.0.0",
  "description": "Phase Platform - Comprehensive Software Development Lifecycle Management System",
  "private": true,
  "author": "Phase Team",
  "license": "Apache-2.0",
  "keywords": [
    "sdlc",
    "project-management",
    "agile",
    "testing",
    "deployment",
    "phase-platform"
  ],
  "homepage": "https://github.com/phase-platform/phase",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phase-platform/phase.git"
  },
  "bugs": {
    "url": "https://github.com/phase-platform/phase/issues"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=9.6.0"
  },
  "packageManager": "pnpm@9.6.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "node scripts/dev.js",
    "start": "turbo start",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "clean": "turbo clean && node scripts/clean.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo type-check",
    "test": "node scripts/test.js",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:migrate:deploy": "turbo db:migrate:deploy",
    "db:studio": "turbo db:studio",
    "db:seed": "turbo db:seed",
    "db:reset": "node scripts/db.js reset",
    "db:list": "node scripts/db.js list",
    "db:cleanup": "node scripts/db.js cleanup",
    "docker:up": "node scripts/docker.js up dev",
    "docker:up:prod": "node scripts/docker.js up prod",
    "docker:down": "node scripts/docker.js down dev",
    "docker:down:prod": "node scripts/docker.js down prod",
    "docker:build": "node scripts/docker.js build dev",
    "docker:build:prod": "node scripts/docker.js build prod",
    "docker:restart": "node scripts/docker.js restart dev",
    "docker:restart:prod": "node scripts/docker.js restart prod",
    "setup": "node scripts/setup.js",
    "reset:dev": "node scripts/reset.js",
    "backup:db": "./scripts/backup-db.sh",
    "health-check": "node scripts/health.js",
    "shadcn": "cd packages/ui && pnpm dlx shadcn@latest add",
    "update:deps": "pnpm -r update --latest",
    "update:interactive": "pnpm -r update --interactive",
    "update:check": "pnpm -r outdated",
    "check:versions": "syncpack list-mismatches",
    "fix:versions": "syncpack fix-mismatches",
    "db:backup": "node scripts/db.js backup"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "prisma": "^5.22.0",
    "rimraf": "^5.0.10",
    "syncpack": "^10.9.3",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^19.1.0",
      "@types/react-dom": "^19.1.0",
      "@types/node": "^20.11.19",
      "react": "^19.1.0",
      "react-dom": "^19.1.0",
      "next": "^15.3.3",
      "@prisma/client": "^5.22.0",
      "prisma": "^5.22.0",
      "tailwindcss": "^3.4.17",
      "eslint": "^8.57.1",
      "typescript": "^5.8.3",
      "rimraf": "^5.0.5",
      "lucide-react": "^0.344.0",
      "bcryptjs": "^2.4.3",
      "@types/bcryptjs": "^2.4.6",
      "uuid": "^9.0.1",
      "@types/uuid": "^9.0.8",
      "nodemailer": "^6.10.1",
      "@trpc/server": "^10.45.2",
      "@testing-library/react": "^14.2.1",
      "framer-motion": "^10.18.0",
      "react-query": "^3.39.3",
      "date-fns": "^2.30.0",
      "@hookform/resolvers": "^3.3.4",
      "next-themes": "^0.2.1",
      "@eslint/js": "^9.0.0",
      "@typescript-eslint/eslint-plugin": "^8.33.0",
      "@typescript-eslint/parser": "^8.33.0",
      "eslint-config-prettier": "^10.1.5",
      "eslint-plugin-import": "^2.29.0",
      "eslint-plugin-jsx-a11y": "^6.8.0",
      "eslint-plugin-react": "^7.37.5",
      "eslint-plugin-react-hooks": "^5.2.0",
      "eslint-plugin-simple-import-sort": "^12.0.0",
      "eslint-plugin-unused-imports": "^3.0.0",
      "eslint-plugin-tailwindcss": "^3.18.0",
      "prettier": "^3.5.3",
      "prettier-plugin-tailwindcss": "^0.6.11",
      "@tailwindcss/aspect-ratio": "^0.4.2",
      "@tailwindcss/forms": "^0.5.10",
      "@tailwindcss/typography": "^0.5.16",
      "autoprefixer": "^10.4.21",
      "postcss-import": "^16.1.0",
      "postcss-nesting": "^13.0.1",
      "zod": "^3.25.55",
      "pg": "^8.11.3"
    },
    "peerDependencyRules": {
      "allowAny": [
        "typescript"
      ]
    }
  }
}
