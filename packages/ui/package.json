{
  "name": "@phase-platform/ui",
  "version": "0.1.0",
  "private": true,
  "description": "UI components for Phase Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "clean": "npx rimraf .turbo node_modules dist || exit 0",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@phase-platform/config": "workspace:*",
    "@phase-platform/types": "workspace:*",
    "@phase-platform/tools-tailwind": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@phase-platform/tools-eslint": "workspace:*",
    "@phase-platform/tools-typescript": "workspace:*",
    "@types/node": "^22.15.29",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  }
}
