{
  "name": "@phase-platform/types",
  "version": "0.1.0",
  "private": true,
  "description": "Shared TypeScript types and schemas for Phase Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas.d.ts",
      "default": "./dist/schemas.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "npx rimraf .turbo node_modules dist || exit 0",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@phase-platform/tools-eslint": "workspace:*",
    "@types/node": "^22.15.29",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.57.1"
  }
}
