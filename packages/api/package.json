{
  "name": "@phase/api",
  "version": "0.1.0",
  "private": true,
  "description": "API utilities and tRPC procedures for Phase Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./trpc": {
      "types": "./dist/trpc.d.ts",
      "default": "./dist/trpc.js"
    },
    "./routers": {
      "types": "./dist/routers/index.d.ts",
      "default": "./dist/routers/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf .turbo node_modules dist",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@phase/config": "workspace:*",
    "@phase/database": "workspace:*",
    "@phase/types": "workspace:*",
    "@trpc/server": "^10.45.2",
    "bcryptjs": "^3.0.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.1.5",
    "nodemailer": "^7.0.3",
    "slugify": "^1.6.6",
    "zod": "^3.25.42"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/nodemailer": "^6.4.17",
    "eslint": "^9.28.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  }
}
