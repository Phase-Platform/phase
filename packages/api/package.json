{
  "name": "@phase-platform/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "API server for Phase Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./trpc": {
      "types": "./dist/trpc.d.ts",
      "default": "./dist/trpc.js"
    },
    "./routers": {
      "types": "./dist/routers/index.d.ts",
      "default": "./dist/routers/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "lint": "eslint . --cache --cache-location .cache/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/.eslintcache",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@phase-platform/config": "workspace:*",
    "@phase-platform/database": "workspace:*",
    "@phase-platform/types": "workspace:*",
    "@trpc/server": "^10.45.2",
    "zod": "^3.22.4"
  }
}
