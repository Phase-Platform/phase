{
  "name": "@phase/config",
  "version": "0.1.0",
  "private": true,
  "description": "Shared configuration files for Phase Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./eslint": {
      "default": "./eslint.js"
    },
    "./prettier": {
      "default": "./prettier.js"
    },
    "./tailwind": {
      "default": "./tailwind.js"
    },
    "./typescript": {
      "default": "./typescript.json"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf .turbo node_modules dist",
    "lint": "eslint .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@phase/types": "workspace:*",
    "zod": "^3.22.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "eslint": "^9.28.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0"
  }
}
