{
  "name": "@phase-platform/config",
  "version": "0.1.0",
  "private": true,
  "description": "Configuration utilities for Phase Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./prettier": {
      "default": "./prettier.js"
    },
    "./tailwind": {
      "default": "./tailwind.js"
    },
    "./typescript": {
      "default": "./typescript.json"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "lint": "eslint . --cache --cache-location .cache/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/.eslintcache",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@phase-platform/types": "workspace:*",
    "zod": "^3.22.4"
  }
}
