{
  "name": "@phase-platform/config",
  "version": "0.1.0",
  "private": true,
  "description": "Shared configuration for Phase Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./prettier": {
      "default": "./prettier.js"
    },
    "./tailwind": {
      "default": "./tailwind.js"
    },
    "./typescript": {
      "default": "./typescript.json"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "npx rimraf .turbo node_modules dist || exit 0",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@phase-platform/types": "workspace:*",
    "zod": "^3.25.42",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@phase-platform/tools-eslint": "workspace:*",
    "@types/node": "^22.15.29",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.57.1"
  }
}
