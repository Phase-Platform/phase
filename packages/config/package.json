{
  "name": "@phase-platform/config",
  "version": "0.1.0",
  "private": true,
  "description": "Configuration utilities for Phase Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./prettier": {
      "default": "./prettier.js"
    },
    "./tailwind": {
      "default": "./tailwind.js"
    },
    "./typescript": {
      "default": "./typescript.json"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "lint": "eslint . --cache --cache-location .cache/.eslintcache",
    "lint:fix": "eslint . --fix --cache --cache-location .cache/.eslintcache",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@phase-platform/types": "workspace:*",
    "zod": "^3.22.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@phase-platform/tools-eslint": "workspace:*",
    "@phase-platform/tools-typescript": "workspace:*",
    "@types/node": "^22.15.29",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "rimraf": "^5.0.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.57.1"
  }
}
