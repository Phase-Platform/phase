{
  "extends": "../../tools/typescript/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true,
    "types": ["react", "node"]
  },
  "include": [
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts",
    "*.js",
    "*.ts",
    "*.tsx",
    "*.config.js",
    "*.config.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
