{
  "extends": "../../tools/typescript/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "src/app/api/**/*",
    ".next/types/**/*.ts",
    "*.js",
    "*.ts",
    "*.tsx",
    "*.config.js",
    "*.config.ts",
    "eslint.config.js",
    "**/eslint.config.js"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
